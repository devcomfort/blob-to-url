{
  "include": [
    "./src/**/*.ts",
    "./@types/**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  }
}