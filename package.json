{
	"name": "blob-to-url",
	"description": "Simple Blob to URL code snippet. (ESM/CJS support)",
	"version": "0.3.0",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"unpkg": "./dist/index.global.js",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf dist",
		"build": "npm run clean && pkgroll --verbose && rollup -c rollup.config.umd.js",
		"build:ci": "npm run clean && NODE_ENV=production pkgroll --verbose && rollup -c rollup.config.umd.js",
		"test": "vitest",
		"test:ci": "vitest run --reporter verbose",
		"prepublishOnly": "npm run build",
		"release:patch": "npm version patch && git push && git push --tags",
		"release:minor": "npm version minor && git push && git push --tags",
		"release:major": "npm version major && git push && git push --tags"
	},
	"files": [
		"dist"
	],
	"author": {
		"name": "devcomfort",
		"email": "im@devcomfort.me"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/devcomfort/blob-to-url.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.com",
		"access": "public"
	},
	"keywords": [
		"blob",
		"datauri",
		"base64",
		"stringify",
		"urlify"
	],
	"dependencies": {
	},
	"devDependencies": {
		"@edge-runtime/vm": "^5.0.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-sucrase": "^5.0.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.10",
		"ky": "^1.7.4",
		"pkgroll": "^2.12.1",
		"rimraf": "^6.0.1",
		"rollup": "^4.32.0",
		"rollup-plugin-clear": "^2.0.7",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-progress": "^1.1.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.4"
	},
	"packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
	"vitest": {
		"environment": "edge-runtime",
		"setupFiles": [
			"./vitest.setup.ts"
		]
	}
}
